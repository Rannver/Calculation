<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.fx50j.calculation.MainActivity">

  <EditText
      android:layout_marginTop="25dp"
      android:layout_width="fill_parent"
      android:layout_height="110dip"
      android:id="@+id/et_input"
      android:background="@drawable/white_bg"
      android:editable="false"
      android:gravity="right|bottom"
      android:paddingRight="4dp"
      android:paddingBottom="4dp"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/et_input"
        android:layout_marginTop="4dp"
        android:background="@drawable/white_seclect"
        android:text="C"
        android:textSize="20sp"
        android:id="@+id/bt_c"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/et_input"
        android:layout_toRightOf="@+id/bt_c"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="DEL"
        android:textSize="20sp"
        android:id="@+id/bt_del"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/et_input"
        android:layout_toRightOf="@+id/bt_del"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="÷"
        android:textSize="25sp"
        android:id="@+id/bt_chu"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/et_input"
        android:layout_toRightOf="@+id/bt_chu"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="×"
        android:textSize="25sp"
        android:id="@+id/bt_cheng"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_c"
        android:layout_marginTop="4dp"
        android:text="7"
        android:textSize="20sp"
        android:id="@+id/bt_7"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_del"
        android:layout_toRightOf="@+id/bt_7"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="8"
        android:textSize="20sp"
        android:id="@+id/bt_8"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_chu"
        android:layout_toRightOf="@+id/bt_8"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="9"
        android:textSize="20sp"
        android:id="@+id/bt_9"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_cheng"
        android:layout_toRightOf="@+id/bt_9"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="－"
        android:textSize="25sp"
        android:id="@+id/bt_jian"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_7"
        android:layout_marginTop="4dp"
        android:text="4"
        android:textSize="20sp"
        android:id="@+id/bt_4"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_8"
        android:layout_toRightOf="@+id/bt_4"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="5"
        android:textSize="20sp"
        android:id="@+id/bt_5"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_9"
        android:layout_toRightOf="@+id/bt_5"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="6"
        android:textSize="20sp"
        android:id="@+id/bt_6"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_jian"
        android:layout_toRightOf="@+id/bt_6"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="＋"
        android:textSize="25sp"
        android:id="@+id/bt_jia"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_4"
        android:layout_marginTop="4dp"
        android:text="1"
        android:textSize="20sp"
        android:id="@+id/bt_1"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_5"
        android:layout_toRightOf="@+id/bt_1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="2"
        android:textSize="20sp"
        android:id="@+id/bt_2"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_6"
        android:layout_toRightOf="@+id/bt_2"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="3"
        android:textSize="20sp"
        android:id="@+id/bt_3"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="199dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_1"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textSize="20sp"
        android:id="@+id/bt_0"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bt_3"
        android:layout_toRightOf="@+id/bt_0"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="."
        android:textSize="25sp"
        android:id="@+id/bt_dian"
        android:background="@drawable/white_seclect"/>

    <Button
        android:layout_width="97dp"
        android:layout_height="184dp"
        android:layout_below="@+id/bt_jia"
        android:layout_toRightOf="@+id/bt_dian"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:text="＝"
        android:textSize="25dp"
        android:id="@+id/bt_dengyu"
        android:background="@drawable/orange_seclect"/>


</RelativeLayout>
